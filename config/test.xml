<form name="Example Form" title="Example Form" debug="true" success-message="Lorem ipsum!">
	<fields>
		<header text="Example Form" />
		<header size="4" text="HTML Escaping &lt;works&gt;" />
		<header icon="plug" size="4" show-if="existence" text="Hello world" />
		<file label="Upload a file..." name="upload_file" max-size="100000">
			<allow ext="docx" />
			<allow ext="jpg" />
		</file>
		<datetime label="Start at" name="start_datetime" min="01/01/2015 11:11 AM" max="01/01/2016 11:11 AM" step="10" />
		<time label="Start time" name="start_time" min="1:00 AM" step="5" max="1:00 PM" />
		<range label="Volume" name="volume" min="3" max="5" default="4" step="0.5" />
		<textbox label="Your name" name="name" />
		<notice header="Wonderful!" text="Hello world!" type="info" icon="inbox">
		
				<li>Alpha beta</li>
				<li>Gamma delta</li>
				<li>Epsilon zeta</li>
		
		</notice>
		<phonenumber label="Phone number" name="phone" />
		<email label="Email address" name="email" must-have-domain="bu.edu" />
		<url label="Website" name="url" />
		<date label="Start date" name="start_date" min="2015-06-17" max="2015-06-20" />

		<number label="How many attendees?" name="num_attendees" min="3" max="5" required="true" show-if="existence" />
		<checkbox label="I agree to the terms and conditions" name="agree_to_terms" must-check="true" />
		<checkbox label="I exist" name="existence" />
		<header text="abc" />
		<textarea label="Additional notes" name="additional_notes" />

		<radios label="Choose a link..." name="choose_a_link">
			<option>Career Center</option>
			<option>Student Link</option>
			<option>Tech Help</option>
			<option>BU Calendar</option>
		</radios>

		<dropdown label="Choose a school..." name="choose_a_school" required="true">
			<option>College of Arts and Sciences</option>
			<option>Questrom School of Business</option>
			<option>College of General Studies</option>
		</dropdown>
		<group show-if="existence">
			<groupheader text="Login!" />
			<groupnotice text="Hello world!">
				<li>Alpha beta</li>
				<li>Gamma delta</li>
				<li>Epsilon zeta</li>
			</groupnotice>
			<textbox label="Username" name="username" required="true" max-length="20" />
			<!--
				     # password is 595
        # generated with PHP's password_hash
        # in prod, don't store this in plaintext
    -->
			<password label="Password" name="password" match-hash="$2y$10$FeVuAyjk82DNDflP6LevxOG7GCWm11bJ7R48Kx7wHH6a9PP7Z1Aki" />
		</group>
		<checkboxes label="What are your favorite colors?" name="fave_colors" required="true">
			<option>Red</option>
			<option>Orange</option>
			<option>Yellow</option>
			<option>Green</option>
			<option>Blue</option>
			<option>Hipster</option>
			<option>&lt;html&gt;</option>
		</checkboxes>
	</fields>
	<outputs>
		<s3 bucket="form-builder-uploads" />
		<mongo server="mongodb://localhost:27017" database="forms" collection="example_form" />
	</outputs>
</form>